# Use official Node.js image
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all backend files
COPY . .

# Expose backend port (assuming it's 4000, adjust if different)
EXPOSE 4000

# Start backend
CMD ["npm", "start"]
